    <!-- 비교윈도우 띄우기 -->
    <div id="mask">
    </div>
    <div class="window" id="compare">
    </div>

    <link rel="stylesheet" href="https://cdn.rawgit.com/marcosc90/node-jsdifflib/8838a6401c6933ca3faa1085bc1ec9b8174a6db8/assets/jsdifflib.css" />
    <meta name="viewport" content="width=device-width" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <style>
        #mask {
            position: absolute;
            z-index: 9000;
            background-color: #000000;
            display: none;
            left: 0;
            top: 0;
        }

        .window {
            overflow: scroll;
            width: 70%;
            height: 700px;
            background-color: white;
            margin: auto;
            display: none;
            position: absolute;
            transform: translateX(-50%);
            z-index: 10000;
            left: 50%;
            top: 10px;
        }
        
        
        #maskWord {
            position: absolute;
            z-index: 9000;
            background-color: #000000;
            display: none;
            left: 0;
            top: 0;
        }

        .windowWord {
            overflow: scroll;
            width: 70%;
            height: 700px;
            background-color: white;
            margin: auto;
            display: none;
            position: absolute;
            transform: translateX(-50%);
            z-index: 10000;
            left: 50%;
            top: 10px;
        }
    </style>
    <script src="https://code.jquery.com/jquery-latest.js"></script>
    <script>
        function buttonRecordFunc() {
            $.ajax({
                url: '/dropbox/drive/getCompare',
                dataType: 'json',
                type: 'POST',
                data: {
                    'date': $('#date').val()
                },
                success: function(data) {
                    document.getElementById('compare').innerHTML = data.data;
                }
            });
            var maskHeight = $(document).height();
            var maskWidth = $(document).width();
            $('#mask').css({
                'width': maskWidth,
                'height': maskHeight
            });
            $('#mask').fadeTo("slow", 0.8);
            $('.window').fadeTo("slow", 1);
            $('.window').show();
        }
        $(document).ready(function() {
            $('.openMask').click(function(e) {
                e.preventDefault();
                buttonRecordFunc();
            });
            $('.window .close').click(function(e) {
                e.preventDefault();
                $('#mask, .window').hide();
            });
            $('#mask').click(function() {
                $(this).hide();
                $('.window').hide();
            });
            
            
            $('.windowWord').click(function(e) {
                e.preventDefault();
                $('#maskWord, .windowWord').hide();
            });
            $('#maskWord').click(function() {
                $(this).hide();
                $('.windowWord').hide();
            });
        });
    </script>

    <!-- 비교윈도우 띄우기 -->

    <!-- /#wrapper -->

    <!-- Bootstrap core JavaScript -->
    <script src="../../vendor/jquery/jquery.min.js"></script>
    <script src="../../vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Menu Toggle Script -->
    <script src="../../chat/chat.js"></script>
    <script>
        window.onload = function() {
            socketConnect(userName, userGroup);
        }
        $("#menu-toggle").click(function(e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });

        function toggle_visibility(id) {
            var e = document.getElementById(id);
            var box1 = document.getElementById("file_div_id");
            if (e.style.display == 'block') {
                box1.style.width = "100%";
                e.style.display = 'none';
            } else {
                box1.style.width = "70%";
                e.style.display = 'block';
            }
        }

        
        //동시코딩 구현함수================================
        function fileClick(id) {
          if(id =='file15.txt'){
              $.ajax({
                url: '/dropbox/drive/getCompare',
                dataType: 'json',
                type: 'POST',
                data: {
                    //파일위치 넘기기
                    'date': $('#date').val()
                },
                success: function(data) {
                    document.getElementById(id).innerHTML = data.data;
                }
            });
            var maskHeight = $(document).height();
            var maskWidth = $(document).width();
            $('#maskWord').css({
                'width': maskWidth,
                'height': maskHeight
            });
            $('#maskWord').fadeTo("slow", 0.8);
            $('.windowWord').fadeTo("slow", 1);
            $('.windowWord').show();
          }
            
        }

    </script>

</body>

