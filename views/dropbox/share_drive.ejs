            <div class="container-fluid" float="left">
                <h1 class="mt-4">Dropbox menu</h1>
                <a href="#" onclick="toggle_visibility('chat_id');">Click here</a>
                <a href="#" class="openMask">비교창열기버튼</a>
                <div class="dropdown-divider"></div>
                <div class="file_chat_div">

                    <div class="file_div" id="file_div_id">
                        <% for (var i = 1; i < dropData.length; i++) { %>
                            <div class="fileGroup">
                                <button class="folderList" id=<%=dropData[i].name %> onClick="fileClick(this.id)">
                                    <% if(dropData[i].name == 'file15.txt') { %>
                                        <img src="../../images/txt_icon.png" />
                                        <div id="maskWord">
                                        </div>
                                        <div class="windowWord" id=<%=dropData[i].name %>>
                                        </div>
                                        <% } else { %>
                                            <img src="../../images/folder_icon.png" />
                                            <% } %>
                                                <div class="fileName">
                                                    <%= dropData[i].name %>
                                                </div>
                                </button>
                            </div>

                            <% } %>
                                <script>
                                    var userName = "<%= dropData[0].userName %>"
                                    var userGroup = "<%= dropData[0].userGroup %>"
                                </script>
                    </div>
                    <div class="chat_div" id="chat_id">
                        <div class="chat_top">
